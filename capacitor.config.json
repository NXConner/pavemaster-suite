{
  "appId": "com.pavemaster.suite",
  "appName": "PaveMaster Suite",
  "webDir": "dist",
  "server": {
    "url": "https://7eb30887-9626-47d4-a66e-506f2cf77df6.lovableproject.com?forceHideBadge=true",
    "cleartext": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 3000,
      "launchAutoHide": true,
      "backgroundColor": "#ffffffff",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#999999",
      "splashFullScreen": true,
      "splashImmersive": true,
      "layoutName": "launch_screen",
      "useDialog": true
    },
    "StatusBar": {
      "style": "default",
      "backgroundColor": "#ffffff"
    },
    "Camera": {
      "permissions": ["camera", "photos"]
    },
    "Geolocation": {
      "permissions": ["location", "coarseLocation"],
      "accuracy": "high"
    },
    "Device": {
      "permissions": ["device-info"]
    },
    "Haptics": {
      "impactStyle": "medium"
    },
    "Network": {
      "permissions": ["network-state"]
    },
    "PushNotifications": {
      "permissions": ["receive", "alert", "badge", "sound"],
      "presentationOptions": ["badge", "sound", "alert"]
    },
    "Storage": {
      "group": "com.pavemaster.storage"
    },
    "Motion": {
      "permissions": ["device-motion", "accelerometer", "gyroscope"]
    },
    "Filesystem": {
      "permissions": ["read", "write", "create", "delete"]
    },
    "Share": {
      "permissions": ["photos", "camera"]
    },
    "Toast": {},
    "AppState": {},
    "Keyboard": {
      "resize": "body",
      "style": "dark",
      "resizeOnFullScreen": true
    },
    "App": {
      "permissions": ["background-modes"]
    },
    "LocalNotifications": {
      "permissions": ["receive", "alert", "badge", "sound"],
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#488AFF",
      "sound": "beep.wav"
    }
  },
  "ios": {
    "scheme": "PaveMaster Suite",
    "backgroundColor": "#ffffff"
  },
  "android": {
    "backgroundColor": "#ffffff",
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  }
}