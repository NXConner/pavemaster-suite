# PaveMaster Suite - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
VITE_APP_ENV=development
VITE_APP_NAME=PaveMaster Suite
VITE_APP_VERSION=2.0.0

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000
VITE_APP_DOMAIN=localhost

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project Settings - Update with your actual Supabase project
VITE_SUPABASE_URL=https://demo-project.supabase.co
VITE_SUPABASE_ANON_KEY=demo_anon_key_replace_with_actual_key

# Supabase Service Role Key (Server-side only - never expose to client)
SUPABASE_SERVICE_ROLE_KEY=demo_service_role_key_replace_with_actual

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres
DB_HOST=localhost
DB_PORT=54322
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Settings
JWT_SECRET=demo_jwt_secret_key_minimum_32_characters_for_development_only
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d

# Encryption Keys
ENCRYPTION_KEY=demo_encryption_key_32_chars_min_dev
SALT_ROUNDS=12

# Session Settings
SESSION_SECRET=your_session_secret_key_here
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# Weather API
WEATHER_API_KEY=demo_weather_api_key
OPENWEATHER_API_KEY=demo_openweather_key

# Mapping Services
MAPBOX_ACCESS_TOKEN=demo_mapbox_token
GOOGLE_MAPS_API_KEY=demo_google_maps_key

# AI Services
OPENAI_API_KEY=demo_openai_key
ANTHROPIC_API_KEY=demo_anthropic_key

# =============================================================================
# EXTERNAL SERVICES & APIs
# =============================================================================

# Weather Services
VITE_OPENWEATHER_API_KEY=your_openweather_api_key
VITE_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Mapping Services
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Geocoding Services
VITE_GEOCODING_API_KEY=your_geocoding_api_key
VITE_GEOCODING_API_URL=https://api.geocoding.service.com

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@pavemaster-suite.com

# SMS/Text Messaging
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@pavemaster-suite.com

# =============================================================================
# FINANCIAL & PAYMENT INTEGRATION
# =============================================================================

# Stripe Payment Processing
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/auth/quickbooks/callback

# =============================================================================
# EQUIPMENT & IoT INTEGRATION
# =============================================================================

# GPS Tracking Services
GPS_PROVIDER=gps_provider_name
GPS_API_KEY=your_gps_api_key
GPS_API_URL=https://api.gpsprovider.com

# Equipment Telematics
TELEMATICS_API_KEY=your_telematics_api_key
TELEMATICS_API_URL=https://api.telematics.com

# IoT Device Management
IOT_BROKER_URL=mqtt://your-iot-broker.com:1883
IOT_USERNAME=your_iot_username
IOT_PASSWORD=your_iot_password

# Sensor Data
SENSOR_API_KEY=your_sensor_api_key
SENSOR_API_URL=https://api.sensors.com

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# TensorFlow Serving
TENSORFLOW_SERVING_URL=http://localhost:8501
ML_MODEL_VERSION=1

# Predictive Analytics
ANALYTICS_API_KEY=your_analytics_api_key
ANALYTICS_MODEL_ID=your_model_id

# =============================================================================
# FILE STORAGE & CDN
# =============================================================================

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif
UPLOAD_PATH=./uploads

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary Configuration (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Google Analytics
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
NEW_RELIC_APP_NAME=PaveMaster Suite

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
MAX_LOG_FILES=30
MAX_LOG_SIZE=10m

# Debug Settings
DEBUG=pavemaster:*
VITE_DEBUG_MODE=false
VERBOSE_LOGGING=false

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# Capacitor Configuration
CAPACITOR_APP_ID=com.pavemaster.suite
CAPACITOR_APP_NAME=PaveMaster Suite
CAPACITOR_APP_VERSION=2.0.0

# Mobile Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Company Information
COMPANY_NAME=Your Paving Company
COMPANY_ADDRESS=123 Main St, City, State 12345
COMPANY_PHONE=+1-555-123-4567
COMPANY_EMAIL=info@yourcompany.com

# Default System Settings
DEFAULT_TIMEZONE=America/New_York
DEFAULT_CURRENCY=USD
DEFAULT_MEASUREMENT_UNIT=imperial

# Business Rules
MAX_PROJECTS_PER_USER=100
MAX_EQUIPMENT_ITEMS=500
DATA_RETENTION_DAYS=2555

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Settings
HOT_RELOAD=true
SOURCE_MAPS=true
DEV_TOOLS=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:54322/test_db
JEST_TIMEOUT=30000
PLAYWRIGHT_HEADLESS=true

# Mock Services (for development)
USE_MOCK_WEATHER=false
USE_MOCK_GPS=false
USE_MOCK_PAYMENTS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggle Configuration
FEATURE_AI_PREDICTIONS=true
FEATURE_BLOCKCHAIN_INTEGRATION=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_APP=true
FEATURE_IOT_INTEGRATION=true
FEATURE_GAMIFICATION=true

# Experimental Features
EXPERIMENTAL_VOICE_COMMANDS=false
EXPERIMENTAL_AR_FEATURES=false
EXPERIMENTAL_QUANTUM_ENCRYPTION=false

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Caching Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
ENABLE_CACHING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pooling
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================

# Compliance Settings
GDPR_ENABLED=true
CCPA_ENABLED=true
OSHA_COMPLIANCE=true
SOC2_COMPLIANCE=true

# Data Retention Policies
USER_DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
BACKUP_RETENTION_DAYS=365

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=development
BUILD_TIMESTAMP=2025-01-01T00:00:00Z
GIT_COMMIT_SHA=abc123def456

# Container Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
HEALTH_CHECK_INTERVAL=30

# Load Balancer Settings
LOAD_BALANCER_TIMEOUT=30
MAX_CONCURRENT_CONNECTIONS=1000

# =============================================================================
# SECURITY HEADERS & POLICIES
# =============================================================================

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# MAINTENANCE & HEALTH CHECKS
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000
DB_HEALTH_CHECK_QUERY=SELECT 1

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please check back later.

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Localization Settings
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR
ENABLE_RTL=false

# Timezone Configuration
DEFAULT_TIMEZONE=America/New_York
DISPLAY_TIMEZONE_SELECTOR=true

# =============================================================================
# NOTES & DOCUMENTATION
# =============================================================================

# Configuration Notes:
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate secrets regularly in production
# 4. Use environment-specific values for different deployments
# 5. Test all integrations in development before production deployment
# 6. Keep this file updated when adding new environment variables
# 7. Document any custom environment variables your team adds

# For production deployment:
# - Set NODE_ENV=production
# - Use HTTPS URLs
# - Enable security features
# - Use production API keys
# - Configure proper CORS origins
# - Set up proper logging
# - Enable monitoring and alerting

