# 🔐 Pavement Performance Suite - Environment Configuration

# 🌐 Application Configuration
NODE_ENV=development
APP_NAME=PaveMaster Suite
APP_URL=http://localhost:3000
PORT=3000

# 🔑 Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# 🔐 Authentication Settings
JWT_SECRET=your_jwt_secret_key
PASSWORD_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MINUTES=15

# 📧 Email Configuration
EMAIL_FROM=noreply@pavemastersuit.com
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=true

# 🌦️ Weather API Configuration
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# 🗺️ Mapping Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# 📊 Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOGGING_LEVEL=info

# 🤖 AI Services
OPENAI_API_KEY=your_openai_api_key
AI_PREDICTION_ENDPOINT=https://api.openai.com/v1/chat/completions

# 💳 Payment Integration
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# 🚀 Deployment Configuration
VERCEL_URL=your_vercel_deployment_url
GITHUB_TOKEN=your_github_personal_access_token

# 🔒 Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com
CORS_ENABLED=true

# 📱 Mobile Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key

# 🌈 Feature Flags
ENABLE_AI_PREDICTIONS=true
ENABLE_MOBILE_SYNC=true
ENABLE_CHURCH_WORKFLOW=true

# 📦 Third-Party Integrations
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

# 🔍 Compliance & Auditing
GDPR_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# 💾 Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pavemasterdb
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=30000

# 🌐 Internationalization
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR

# 🚧 Development Specific
DEBUG=pavemastersuit:*
CHOKIDAR_USEPOLLING=true

# 🔍 Telemetry & Analytics
TELEMETRY_ENABLED=false
ANALYTICS_TRACKING_ID=your_analytics_tracking_id

# 📝 Notes
# 1. Never commit this file with real secrets
# 2. Use strong, unique values for each environment
# 3. Rotate secrets periodically
# 4. Use a secrets manager in production